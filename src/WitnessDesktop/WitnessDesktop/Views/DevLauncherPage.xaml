<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WitnessDesktop.Views.DevLauncherPage"
             BackgroundColor="{StaticResource BgPrimary}"
             Shell.NavBarIsVisible="False"
             Title="Dev Launcher">

    <Grid RowDefinitions="*,Auto,Auto,*"
          Padding="32">

        <!-- Title block -->
        <VerticalStackLayout Grid.Row="1"
                             HorizontalOptions="Center"
                             Spacing="4"
                             Margin="0,0,0,40">
            <Label Text="GAME GHOST"
                   FontFamily="OrbitronBold"
                   FontSize="36"
                   TextColor="{StaticResource TextPrimary}"
                   HorizontalTextAlignment="Center"/>
            <Label Text="DEV BUILD"
                   FontFamily="RajdhaniSemiBold"
                   FontSize="16"
                   TextColor="{StaticResource AccentPurple}"
                   HorizontalTextAlignment="Center"
                   CharacterSpacing="3"/>
        </VerticalStackLayout>

        <!-- Launch cards -->
        <VerticalStackLayout Grid.Row="2"
                             HorizontalOptions="Center"
                             Spacing="16"
                             MaximumWidthRequest="320">

            <!-- Game Ghost App card -->
            <Border BackgroundColor="{StaticResource BgSecondary}"
                    Padding="24,20"
                    StrokeThickness="1"
                    Stroke="{StaticResource BgCard}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGameGhostAppTapped"/>
                </Border.GestureRecognizers>
                <VerticalStackLayout Spacing="6">
                    <Label Text="Game Ghost App"
                           FontFamily="OrbitronBold"
                           FontSize="18"
                           TextColor="{StaticResource TextPrimary}"/>
                    <Label Text="Launch normally"
                           FontFamily="RajdhaniRegular"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Workbench card -->
            <Border BackgroundColor="{StaticResource BgSecondary}"
                    Padding="24,20"
                    StrokeThickness="1"
                    Stroke="{StaticResource AccentPurple}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{StaticResource AccentPurple}"
                            Offset="0,0"
                            Radius="12"
                            Opacity="0.25"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWorkbenchTapped"/>
                </Border.GestureRecognizers>
                <VerticalStackLayout Spacing="6">
                    <Label Text="Workbench"
                           FontFamily="OrbitronBold"
                           FontSize="18"
                           TextColor="{StaticResource TextPrimary}"/>
                    <Label Text="Component preview"
                           FontFamily="RajdhaniRegular"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>

    </Grid>
</ContentPage>
