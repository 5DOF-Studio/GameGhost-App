<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WitnessDesktop"
             xmlns:utils="clr-namespace:WitnessDesktop.Utilities"
             x:Class="WitnessDesktop.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <utils:IsNotNullConverter x:Key="IsNotNullConverter"/>
            <utils:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <utils:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter"/>
            <utils:AudioBarHeightConverter x:Key="AudioBarHeightConverter"/>
            
            <!-- Timeline Converters -->
            <utils:RoleToUserVisibilityConverter x:Key="RoleToUserVisibility"/>
            <utils:RoleToAssistantVisibilityConverter x:Key="RoleToAssistantVisibility"/>
            <utils:SignalToUpperCaseConverter x:Key="SignalToUpperCase"/>
            <utils:NotNullToBoolConverter x:Key="NotNullToBool"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
