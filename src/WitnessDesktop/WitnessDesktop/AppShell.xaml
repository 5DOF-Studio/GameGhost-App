<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WitnessDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WitnessDesktop.Views"
    xmlns:local="clr-namespace:WitnessDesktop"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="{StaticResource BgPrimary}"
    Title="Game Ghost">

    <!-- Production flow -->
    <TabBar x:Name="ProductionTab">
        <ShellContent
            Title="Agent Selection"
            ContentTemplate="{DataTemplate views:AgentSelectionPage}"
            Route="AgentSelection" />
    </TabBar>

    <!-- Dev launcher (toggled via code-behind #if DEBUG) -->
    <TabBar x:Name="DevTab">
        <ShellContent
            Title="Dev Launcher"
            ContentTemplate="{DataTemplate views:DevLauncherPage}"
            Route="DevLauncher" />
    </TabBar>

</Shell>
